<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="GohvTwitter.GUI.GohvTwitter.Controller"
          fx:id="container"
          stylesheets="/css/sample.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="30" vgap="30"
          >

    <Text text="GohvTwitter"
          styleClass="title"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"
          GridPane.halignment="CENTER"

    />

    <Label text="Tweet here:"
           styleClass="labelTweet"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
    />

    <TextField fx:id="tweetField"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"
    />

    <Button text="Tweet"
            styleClass="but"
            GridPane.columnIndex="2"
            GridPane.rowIndex="1"
            GridPane.halignment="RIGHT"
            onAction="#tweet"
    />


</GridPane>